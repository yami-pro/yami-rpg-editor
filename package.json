{
  "name": "yami-rpg-editor",
  "version": "1.0.0",
  "main": "main.js",
  "productName": "YAMI",
  "author": "Yami",
  "description": "2D rpg editor",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder build --win --x64",
    "pack-win": "electron-builder build --win --x64 --ia32",
    "pack-macos": "electron-builder build --mac --publish never"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yami-pro/yami-rpg-editor.git"
  },
  "packageManager": "pnpm@9.15.4",
  "devDependencies": {
    "@ruan-cat/commitlint-config": "^0.1.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "electron": "^18.3.15",
    "electron-builder": "^23.6.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "build": {
    "appId": "com.yami.rpgeditor",
    "electronVersion": "18.3.15",
    "artifactName": "${productName} ${version} installer.${ext}",
    "directories": {
      "buildResources": "Assets",
      "output": "dist"
    },
    "asar": false,
    "asarUnpack": [
      "locales",
      "templates"
    ],
    "extraFiles": [],
    "files": [
      "build",
      "fonts",
      "images",
      "locales",
      "script/webgl/shaders",
      "templates",
      "commands.json",
      "default.json",
      "index.html",
      "main.js",
      "package.json",
      "README.md"
    ],
    "nsis": {
      "oneClick": true,
      "shortcutName": "YAMI"
    },
    "win": {
      "icon": "_electron/resources/app/icon.png",
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "_electron/resources/app/icon.png"
    }
  }
}